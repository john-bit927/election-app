<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>PU Results</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body { background: linear-gradient(to right, #28a745, #20c997); min-height: 100vh; }
    .header { background: linear-gradient(135deg, #00b140, #ffffff); color: #003366; padding: 1.5rem; border-radius: 15px; margin-bottom: 1rem; box-shadow: 0 4px 8px rgba(0,0,0,0.1); animation: pulse 2s infinite; }
    @keyframes pulse { 0% { transform: scale(1); } 50% { transform: scale(1.02); } 100% { transform: scale(1); } }
    canvas { border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); }
    .total-votes { background: rgba(255,255,255,0.9); border-radius: 10px; padding: 1rem; text-align: center; margin: 1rem 0; }
  </style>
</head>
<body class="container-fluid p-4">
  <div class="header text-center">
    <h2><i class="fas fa-chart-pie me-2" style="color: #ce1126;"></i>Question 1: Polling Unit Results</h2>
  </div>
  <div class="row justify-content-center mb-4">
    <div class="col-md-6">
      <form method="post" action="/pu">
        <div class="input-group">
          <input type="number" name="pu_id" placeholder="Enter PU ID (e.g., 8)" value="<%= puId || '' %>" class="form-control" required>
          <button type="submit" class="btn btn-outline-light"><i class="fas fa-search me-1"></i>Load</button>
        </div>
      </form>
    </div>
  </div>
  <% if (pu) { %>
    <div class="row">
      <div class="col-md-6">
        <div class="card shadow">
          <div class="card-header bg-success text-white">
            <h4><i class="fas fa-map-marker-alt me-2"></i><%= pu.polling_unit_name %> (ID: <%= pu.uniqueid %>)</h4>
          </div>
          <div class="card-body">
            <div class="total-votes">
              <h5>Total Votes: <%= Object.values(results).reduce((a, b) => a + b, 0) %></h5>
            </div>
            <table class="table table-striped">
              <thead><tr><th>Party</th><th>Votes (%)</th></tr></thead>
              <tbody>
                <% const total = Object.values(results).reduce((a, b) => a + b, 0); Object.entries(results).forEach(([party, score]) => { %>
                  <tr><td><%= party %></td><td><strong><%= score %> (<%= Math.round((score / total) * 100) %>%)</strong></td></tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card shadow">
          <div class="card-header bg-info text-white">
            <h4><i class="fas fa-pie-chart me-2"></i>Vote Distribution</h4>
          </div>
          <div class="card-body">
            <canvas id="puChart"></canvas>
          </div>
        </div>
      </div>
    </div>
    <script>
      const ctx = document.getElementById('puChart').getContext('2d');
      const total = <%- JSON.stringify(Object.values(results).reduce((a, b) => a + b, 0)) %>;
      new Chart(ctx, {
        type: 'pie',
        data: {
          labels: <%- JSON.stringify(Object.keys(results)) %>,
          datasets: [{
            data: <%- JSON.stringify(Object.values(results)) %>,
            backgroundColor: ['#00b140', '#007bff', '#ffc107', '#28a745', '#dc3545', '#6f42c1', '#fd7e14', '#17a2b8', '#6c757d'],
            borderWidth: 2,
            borderColor: '#fff'
          }]
        },
        options: {
          responsive: true,
          plugins: { 
            legend: { position: 'bottom', labels: { padding: 20 } }, 
            tooltip: { callbacks: { label: (ctx) => `${ctx.label}: ${ctx.parsed} votes (${Math.round((ctx.parsed / total) * 100)}%)` } } 
          }
        }
      });
    </script>
  <% } else if (puId) { %>
    <div class="alert alert-warning text-center"><i class="fas fa-exclamation-triangle me-2"></i>No data for PU ID <%= puId %>. Try 8.</div>
  <% } %>
  <div class="text-center mt-4">
    <a href="/" class="btn btn-secondary btn-lg"><i class="fas fa-home me-1"></i>Home</a>
  </div>
</body>
</html>